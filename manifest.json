{
  "manifest_version": 3,
  "name": "ColorDetective",
  "version": "1.0.0",
  "description": "A browser extension to investigate elements by color profiles",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
